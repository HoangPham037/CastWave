<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_115dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_buy_vip_card"
        app:round="@dimen/_12dp" />

    <com.castwave.castwave.customview.TextCastWaveBold
        android:id="@+id/tvOpenLockVipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:text="@string/txt_open_lock_vip_card"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_info_user_doscovery"
        android:backgroundTint="#B32A2849"
        android:gravity="center"
        android:layout_margin="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.castwave.castwave.customview.TextCastWaveBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/txt_buy_now"
            android:paddingVertical="@dimen/_12dp"
            android:paddingStart="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>