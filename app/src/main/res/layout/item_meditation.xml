<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_9_5dp"
    android:layout_marginTop="@dimen/_12dp"
    android:background="@drawable/bg_radius_12_8dp"
    android:padding="@dimen/_7dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivCoverPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_cover"
        app:layout_constraintDimensionRatio="W ,148:202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="@dimen/_8dp" />


    <com.castwave.castwave.customview.TextCastWaveBold
        android:id="@+id/tvVipCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:background="@drawable/radius_4dp"
        android:paddingHorizontal="@dimen/_8dp"
        android:paddingVertical="@dimen/_4dp"
        android:textAllCaps="true"
        android:textSize="@dimen/_10sp"
        app:layout_constraintEnd_toEndOf="@id/ivCoverPhoto"
        app:layout_constraintTop_toTopOf="@id/ivCoverPhoto"
        tool:text="1 THẺ CASTWAVE"
        tool:textColor="@color/yellow" />

    <com.castwave.castwave.customview.TextCastWaveBold
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@id/ivCoverPhoto"
        android:text="Gặp gỡ đứa trẻ bên trong"
        android:textColor="@color/white" />

    <com.castwave.castwave.customview.TextCastWaveRegular
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="48 phút"
        android:textColor="@color/purple_03"
        android:paddingVertical="@dimen/_5dp"
        android:textSize="@dimen/_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>