<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_12dp"
    android:background="@drawable/bg_radius_12"
    android:padding="@dimen/_8dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivCoverPhoto"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="@dimen/_8dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:src="@drawable/ic_add_32dp"
        app:layout_constraintBottom_toBottomOf="@id/ivCoverPhoto"
        app:layout_constraintEnd_toEndOf="@id/ivCoverPhoto" />

    <com.castwave.castwave.customview.TextCastWaveBold
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5dp"
        android:text="Vì sao thế nhỉ?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sp"
        app:layout_constraintBottom_toTopOf="@id/tvNameAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCoverPhoto" />

    <com.castwave.castwave.customview.TextCastWaveRegular
        android:id="@+id/tvNameAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Hữu Trí"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_8dp"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>