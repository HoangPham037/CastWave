<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_12"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <View
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_4dp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_12dp"
            android:background="@drawable/bg_radius_16dp"
            android:backgroundTint="@color/grey_01" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <NumberPicker
                android:id="@+id/minPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_30dp"
                android:theme="@style/NumberPickerTheme" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_40dp"
                android:layout_marginVertical="@dimen/_50dp"
                android:background="@color/white" />

            <NumberPicker
                android:id="@+id/secPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_30dp"
                android:theme="@style/NumberPickerTheme" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_gravity="center">
            <com.castwave.castwave.customview.TextCastWaveBold
                android:id="@+id/tvTurnOffTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:background="@drawable/bg_radius_8dp_purple_01"
                android:gravity="center"
                android:padding="@dimen/_16dp"
                android:visibility="gone"
                android:text="@string/txt_turn_off_timer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sp" />
            <com.castwave.castwave.customview.TextCastWaveBold
                android:id="@+id/tvSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:background="@drawable/bg_radius_8dp_purple_01"
                android:gravity="center"
                android:padding="@dimen/_16dp"
                android:text="@string/txt_save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sp" />
        </TableRow>

    </LinearLayout>
</LinearLayout>